<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('#btnSendMessage').click(function () {
            var form = $('#contactForm');
            var btn = $(this);

            // Basit bir boşluk kontrolü
            if (form.find('.required').val() === "") {
                Swal.fire('Uyarı!', 'Lütfen gerekli alanları doldurun.', 'warning');
                return;
            }

            btn.prop('disabled', true).text('Gönderiliyor...');

            $.ajax({
                type: "POST",
                url: "/Default/SendMessage", // Controller yolunu açıkça yazdık
                data: form.serialize(),
                success: function (data) {
                    Swal.fire({
                        title: 'Başarılı!',
                        text: 'Mesajınız başarıyla iletildi.',
                        icon: 'success',
                        confirmButtonText: 'Tamam',
                        confirmButtonColor: '#00d9ff'
                    }).then((result) => {
                        form[0].reset();
                        btn.prop('disabled', false).text('Mesaj Gönder');
                        if (result.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    Swal.fire('Hata!', 'Mesaj gönderilirken bir sorun oluştu.', 'error');
                    btn.prop('disabled', false).text('Mesaj Gönder');
                }
            });
        });
    });
</script>

