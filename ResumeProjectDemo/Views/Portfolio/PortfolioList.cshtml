@model List<ResumeProjectDemo.Entities.Portfolio>
@{
    ViewData["Title"] = "Tüm Projeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-8 h-full overflow-y-auto">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white">Proje Yönetimi</h1>
            <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Sistemdeki tüm projelerin durumlarını buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Portfolio/CreatePortfolio/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-background-dark px-5 py-2.5 rounded-xl font-bold transition-all shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Proje Girişi
        </a>
    </div>

    <div class="bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-2xl overflow-hidden shadow-sm">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#283539]">
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">#</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">Başlık</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">Durum</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9] text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-[#283539]">
                @foreach (var x in Model)
                {
                    <tr class="hover:bg-slate-50 dark:hover:bg-[#161d20] transition-colors @(x.Status ? "" : "opacity-50")">
                        <td class="px-6 py-4 text-sm font-medium">@x.PortfolioId</td>
                        <td class="px-6 py-4 text-sm font-semibold text-slate-700 dark:text-slate-200">@x.Title</td>

                        @* Durum Rozeti *@
                        <td class="px-6 py-4">
                            @if (x.Status)
                            {
                                <span class="px-2 py-1 rounded-full bg-green-500/10 text-green-500 text-[10px] font-bold uppercase tracking-wider">Yayında</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 rounded-full bg-red-500/10 text-red-500 text-[10px] font-bold uppercase tracking-wider">Pasif</span>
                            }
                        </td>

                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end gap-3">
                                <a href="/Portfolio/UpdatePortfolio/@x.PortfolioId" class="flex items-center gap-1.5 text-xs font-bold px-3 py-1.5 rounded-lg border border-primary text-primary hover:bg-primary/10 transition-colors">
                                    <span class="material-symbols-outlined text-[16px]">edit</span>
                                    Güncelle
                                </a>

                                @* Aktif/Pasif Butonu *@
                                <a href="/Portfolio/ChangeStatus/@x.PortfolioId"
                                   class="flex items-center gap-1.5 text-xs font-bold px-3 py-1.5 rounded-lg border transition-colors @(x.Status ? "border-amber-500/50 text-amber-500 hover:bg-amber-500/10" : "border-green-500/50 text-green-500 hover:bg-green-500/10")">
                                    <span class="material-symbols-outlined text-[16px]">@(x.Status ? "visibility_off" : "visibility")</span>
                                    @(x.Status ? "Pasife Al" : "Aktife Al")
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>