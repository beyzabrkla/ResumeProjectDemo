@model ResumeProjectDemo.Entities.About
@{
    ViewData["Title"] = "Hakkımda Tüm Bilgiler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white">Tüm Hakkımda Bilgilerini Düzenle</h1>
        <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Veritabanındaki 13 alanın tamamı aşağıda listelenmiştir.</p>
    </div>

    <form asp-action="UpdateAbout" asp-controller="About" method="post" class="space-y-8 bg-white dark:bg-[#111618] p-8 rounded-xl border border-slate-200 dark:border-[#283539] shadow-sm">
        <input type="hidden" asp-for="AboutId" />

        <div class="space-y-4">
            <h3 class="text-lg font-bold text-primary flex items-center gap-2 border-b border-slate-100 dark:border-[#283539] pb-2">
                <span class="material-symbols-outlined">person</span> Kişisel Bilgiler
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-sm font-semibold">Ad Soyad</label>
                    <input asp-for="NameSurname" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary outline-none" />
                </div>
                <div class="space-y-2">
                    <label class="text-sm font-semibold">Başlık (Title)</label>
                    <input asp-for="Title" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary outline-none" />
                </div>
                <div class="space-y-2 md:col-span-2">
                    <label class="text-sm font-semibold">Profil Resim URL</label>
                    <input asp-for="ImageUrl" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary outline-none" />
                </div>
                <div class="space-y-2 md:col-span-2">
                    <label class="text-sm font-semibold">Genel Açıklama (Description)</label>
                    <textarea asp-for="Description" rows="4" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary outline-none"></textarea>
                </div>
            </div>
        </div>

        <div class="space-y-4 pt-4">
            <h3 class="text-lg font-bold text-amber-500 flex items-center gap-2 border-b border-slate-100 dark:border-[#283539] pb-2">
                <span class="material-symbols-outlined">school</span> Eğitim Geçmişi
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                @* Eğitim 1 *@
                <div class="p-4 rounded-lg bg-slate-50/50 dark:bg-white/5 space-y-4">
                    <label class="block font-bold text-xs uppercase tracking-widest text-slate-400">1. Eğitim Bilgisi</label>
                    <div class="space-y-2">
                        <label class="text-xs">Eğitim Başlığı (Okul/Bölüm)</label>
                        <input asp-for="EducationTitle1" type="text" class="w-full px-4 py-2 rounded-lg bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-amber-500 outline-none" />
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs">Eğitim Tarihi</label>
                        <input asp-for="EducationDate1" type="text" class="w-full px-4 py-2 rounded-lg bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-amber-500 outline-none" />
                    </div>
                </div>

                @* Eğitim 2 *@
                <div class="p-4 rounded-lg bg-slate-50/50 dark:bg-white/5 space-y-4">
                    <label class="block font-bold text-xs uppercase tracking-widest text-slate-400">2. Eğitim Bilgisi</label>
                    <div class="space-y-2">
                        <label class="text-xs">Eğitim Başlığı (Okul/Bölüm)</label>
                        <input asp-for="EducationTitle2" type="text" class="w-full px-4 py-2 rounded-lg bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-amber-500 outline-none" />
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs">Eğitim Tarihi</label>
                        <input asp-for="EducationDate2" type="text" class="w-full px-4 py-2 rounded-lg bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-amber-500 outline-none" />
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-4 pt-4">
            <h3 class="text-lg font-bold text-emerald-500 flex items-center gap-2 border-b border-slate-100 dark:border-[#283539] pb-2">
                <span class="material-symbols-outlined">work</span> Deneyim Özetleri (Summary)
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @* Deneyim 1 *@
                <div class="space-y-4">
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Özet Başlık 1</label>
                        <input asp-for="SummaryExperienceTitle1" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-emerald-500 outline-none" />
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Özet Açıklama 1</label>
                        <textarea asp-for="SummaryExperienceDesc1" rows="3" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-emerald-500 outline-none"></textarea>
                    </div>
                </div>

                @* Deneyim 2 *@
                <div class="space-y-4">
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Özet Başlık 2</label>
                        <input asp-for="SummaryExperienceTitle2" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-emerald-500 outline-none" />
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Özet Açıklama 2</label>
                        <textarea asp-for="SummaryExperienceDesc2" rows="3" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-1 focus:ring-emerald-500 outline-none"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-end gap-3 pt-6 border-t border-slate-100 dark:border-[#283539]">
            <button type="submit" class="px-10 py-3 text-sm font-bold text-white bg-primary hover:bg-primary/90 rounded-lg shadow-lg transition-all flex items-center gap-2">
                <span class="material-symbols-outlined">save</span>
                Tüm Bilgileri Veritabanına Kaydet
            </button>
        </div>
    </form>
</div>