@model ResumeProjectDemo.Entities.About
@{
    ViewData["Title"] = "Hakkımda Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white">Hakkımda Bilgilerini Güncelle</h1>
        <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Ana sayfada görünen kişisel bilgilerini buradan yönetebilirsin.</p>
    </div>

    <form asp-action="UpdateAbout" asp-controller="About" method="post" class="space-y-6 bg-white dark:bg-[#111618] p-8 rounded-xl border border-slate-200 dark:border-[#283539] shadow-sm">
        <input type="hidden" asp-for="AboutId" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @* Başlık *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300">Başlık (Meslek vb.)</label>
                <input asp-for="Title" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" placeholder="Örn: Full Stack Developer" />
            </div>

            @* Resim URL *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300">Profil Resim Yolu</label>
                <input asp-for="ImageUrl" type="text" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" />
            </div>
        </div>

        @* Açıklama (Textarea) *@
        <div class="space-y-2">
            <label class="text-sm font-medium text-slate-700 dark:text-slate-300">Kısa Biyografi / Hakkımda Metni</label>
            <textarea asp-for="Description" rows="6" class="w-full px-4 py-2 rounded-lg bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" placeholder="Kendinden bahset..."></textarea>
        </div>

        <div class="flex items-center justify-end gap-3 pt-4">
            <a href="/Dashboard/Index" class="px-6 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-[#1c2427] rounded-lg transition-colors">Vazgeç</a>
            <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-primary hover:bg-primary/90 rounded-lg shadow-lg shadow-primary/20 transition-all flex items-center gap-2">
                <span class="material-symbols-outlined text-sm">save</span>
                Değişiklikleri Kaydet
            </button>
        </div>
    </form>
</div>