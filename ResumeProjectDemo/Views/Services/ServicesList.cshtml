@model List<ResumeProjectDemo.Entities.Service>
@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto space-y-8">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
        <div>
            <h3 class="text-3xl font-black tracking-tight">Hizmetlerim</h3>
            <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Sunduğunuz profesyonel hizmetleri buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Services/CreateService" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-all">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Hizmet Ekle
        </a>
    </div>

    <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#3b4d54]">
                        <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">İkon</th>
                        <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">Hizmet Başlığı</th>
                        <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">Açıklama</th>
                        <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9] text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-[#3b4d54]">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50/50 dark:hover:bg-white/5 transition-colors @(item.Status ? "" : "opacity-50")">
                            <td class="px-6 py-5">
                                <span class="material-symbols-outlined text-primary">@item.IconUrl</span>
                            </td>
                            <td class="px-6 py-5 font-bold text-sm">@item.Title</td>
                            <td class="px-6 py-5 text-sm">
                                @if (item.Status)
                                {
                                    <span class="px-2 py-1 rounded-full bg-green-500/10 text-green-500 text-[10px] font-bold uppercase">Aktif</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 rounded-full bg-red-500/10 text-red-500 text-[10px] font-bold uppercase">Pasif</span>
                                }
                            </td>
                            <td class="px-6 py-5 text-right space-x-2">
                                <a href="/Services/UpdateService/@item.ServiceId" class="inline-flex p-1.5 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>

                                @* Aktif/Pasif Tetikleyici Buton *@
                                <a href="/Services/ChangeStatus/@item.ServiceId"
                                   class="inline-flex p-1.5 @(item.Status ? "bg-amber-500" : "bg-green-500") text-white rounded-lg transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">@(item.Status ? "visibility_off" : "visibility")</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>