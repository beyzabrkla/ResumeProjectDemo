@model ResumeProjectDemo.Entities.Service
@{
    ViewData["Title"] = "Hizmet İşlemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Services/ServiceList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">@(Model != null ? "Hizmeti Düzenle" : "Yeni Hizmet Ekle")</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Sunduğunuz hizmetin detaylarını belirleyin.</p>
            </div>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    @if (Model != null)
                    {
                        <input type="hidden" asp-for="ServiceId" />
                    }

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Title" class="block text-sm font-bold mb-2">Hizmet Başlığı</label>
                            <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 transition-all" placeholder="Örn: Web Geliştirme" required />
                        </div>
                        <div>
                            <label asp-for="IconUrl" class="block text-sm font-bold mb-2">İkon Kodu (Material Symbol)</label>
                            <input type="text" asp-for="IconUrl" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 transition-all" placeholder="Örn: terminal, cloud, brush" required />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Description" class="block text-sm font-bold mb-2">Açıklama</label>
                        <textarea asp-for="Description" rows="5" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 transition-all resize-none" placeholder="Hizmet hakkında kısa bilgi..."></textarea>
                    </div>

                    <div class="flex items-center gap-3 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit" class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90">
                            <span class="material-symbols-outlined text-[20px]">save</span> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>