@model ResumeProjectDemo.Entities.Experience
@{
    ViewData["Title"] = "Deneyim Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Experience/ExperienceList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Deneyim Düzenleme</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Deneyim bilgilerinizi ve görünürlük durumunu güncelleyin</p>
            </div>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="ExperienceId" />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-1">
                            <label asp-for="Title" class="block text-sm font-bold mb-2">
                                Şirket Adı - Unvan <span class="text-red-500">*</span>
                            </label>
                            <input type="text" asp-for="Title"
                                   class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none transition-all"
                                   placeholder="Örn: ABC Şirketi - Frontend Developer" required />
                        </div>

                        <div class="md:col-span-1">
                            <label asp-for="Status" class="block text-sm font-bold mb-2">
                                Yayın Durumu
                            </label>
                            <select asp-for="Status"
                                    class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none transition-all font-semibold">
                                <option value="true">🟢 Aktif (Yayında)</option>
                                <option value="false">🔴 Pasif (Gizli)</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <label asp-for="WorkDate" class="block text-sm font-bold mb-2">
                            Çalışma Tarihi <span class="text-red-500">*</span>
                        </label>
                        <input type="text" asp-for="WorkDate"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none transition-all"
                               placeholder="Örn: 2020 - 2023" required />
                    </div>

                    <div>
                        <label asp-for="Description" class="block text-sm font-bold mb-2">
                            Açıklama <span class="text-red-500">*</span>
                        </label>
                        <textarea asp-for="Description" rows="6"
                                  class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none transition-all resize-none"
                                  placeholder="Pozisyon hakkında detaylı bilgi..." required></textarea>
                    </div>

                    <div class="flex items-center gap-3 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit"
                                class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity shadow-lg shadow-primary/10">
                            <span class="material-symbols-outlined text-[20px]">save</span>
                            Değişiklikleri Kaydet
                        </button>
                        <a href="/Experience/ExperienceList/"
                           class="flex items-center gap-2 px-6 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-700 dark:text-slate-300 rounded-lg font-bold text-sm hover:bg-slate-200 dark:hover:bg-[#283539] transition-colors">
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>