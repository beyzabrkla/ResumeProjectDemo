@model List<ResumeProjectDemo.Entities.Skill>
@{
    ViewData["Title"] = "Yetenek Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
            <div>
                <h3 class="text-3xl font-black tracking-tight">Yetenek Listesi</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Teknik becerilerinizi bu alandan yönetebilirsiniz.</p>
            </div>
            <a href="/Skill/CreateSkill" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                <span class="material-symbols-outlined text-[20px]">add</span>
                Yeni Yetenek Ekle
            </a>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#3b4d54]">
                            <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">#</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9]">Yetenek</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9] text-center">Durum</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 dark:text-[#9db2b9] text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-[#3b4d54]">
                        @foreach (var x in Model)
                        {
                            // Hata almamak için mantığı burada kuruyoruz
                            var rowClass = x.Status ? "" : "opacity-50";
                            var btnClass = x.Status ? "bg-amber-500 hover:bg-amber-600" : "bg-green-500 hover:bg-green-600";
                            var iconName = x.Status ? "visibility_off" : "visibility";

                            <tr class="hover:bg-slate-50 dark:hover:bg-white/5 transition-colors @rowClass">
                                <td class="px-6 py-4 font-bold">@x.SkillId</td>
                                <td class="px-6 py-4">
                                    <div class="flex flex-col gap-1">
                                        <span class="font-bold text-sm">@x.Title</span>
                                        <div class="w-24 h-1.5 bg-slate-100 dark:bg-slate-800 rounded-full overflow-hidden">
                                            <div class="h-full bg-primary" style="width: @x.Value%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    @if (x.Status)
                                    {
                                        <span class="px-2 py-1 bg-green-500/10 text-green-500 text-[10px] font-bold rounded-full">AKTİF</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-red-500/10 text-red-500 text-[10px] font-bold rounded-full">PASİF</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex justify-end gap-2">
                                        <a href="/Skill/UpdateSkill/@x.SkillId" class="p-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors shadow-sm">
                                            <span class="material-symbols-outlined text-sm">edit</span>
                                        </a>

                                        <a href="/Skill/ChangeStatus/@x.SkillId"
                                           class="p-2 text-white rounded-lg transition-colors shadow-sm @btnClass"
                                           title="@(x.Status ? "Pasife Al" : "Aktife Al")">
                                            <span class="material-symbols-outlined text-sm">@iconName</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>